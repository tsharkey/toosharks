---
export interface CTACardData {
  title: string;
  description: string;
  buttonText: string;
  buttonUrl: string;
  buttonTarget?: "_blank" | "_self";
  rounded?: boolean;
}

interface Props {
  data: CTACardData;
}

const { data } = Astro.props;
const {
  title,
  description,
  buttonText,
  buttonUrl,
  buttonTarget = "_self",
  rounded = false,
} = data;

const cardClasses = `
  w-80 h-48 
  bg-gradient-to-br from-blue-50 to-indigo-100
  border-2 border-indigo-200
  shadow-lg 
  p-6 
  ${rounded ? "rounded-lg" : "rounded-none"}
  flex flex-col justify-between
  relative
`;
---

<div class={cardClasses}>
  <!-- Main content area -->
  <div class="flex-1 flex flex-col justify-center text-center">
    <h2 class="text-2xl font-bold text-gray-900 mb-3 leading-tight">{title}</h2>
    <p class="text-sm text-gray-700 leading-relaxed">{description}</p>
  </div>

  <!-- Button area -->
  <div class="flex justify-center pt-4">
    <a
      href={buttonUrl}
      target={buttonTarget}
      class="inline-flex items-center px-6 py-2 bg-indigo-600 hover:bg-indigo-700 text-white font-medium text-sm rounded-md transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"
      onclick="event.stopPropagation();"
    >
      {buttonText}
    </a>
  </div>
</div>

<style>
  /* Prevent the card click from interfering with button clicks */
  .cta-card a {
    position: relative;
    z-index: 10;
  }
</style>
