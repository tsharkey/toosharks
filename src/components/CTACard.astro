---
// CTACard.astro
export interface Props {
  title?: string;
  description?: string;
  buttonText?: string;
  href?: string;
}

const {
  title = "Hey! I'm Tom!",
  description = "Welcome, thanks for stopping by to checkout my piece of the internet",
  buttonText = "About Me",
  href = "/about",
} = Astro.props;
---

<div
  class="bg-gradient-to-br from-accent to-secondary rounded-lg shadow-lg p-6 w-100 h-56 border border-primary/30
            transition-all duration-300 hover:shadow-xl select-none text-white flex flex-col justify-center items-center"
>
  <h3 class="text-2xl font-bold mb-3 text-center">{title}</h3>
  <p class="text-primary-content/80 text-center mb-4 leading-relaxed">
    {description}
  </p>
  <a
    href={href}
    class="bg-warning text-accent-content font-semibold px-6 py-2 rounded-full
           transition-colors duration-200 shadow-md hover:shadow-lg transform"
  >
    {buttonText}
  </a>
</div>
