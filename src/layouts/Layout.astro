---
// src/layouts/Layout.astro
import "../styles/global.css";
import IslandNav from "../components/IslandNav.astro";

export interface Props {
  title: string;
  fixed?: boolean;
}

const { title, fixed = false } = Astro.props;
---

<!doctype html>
<html data-theme="nord" lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body
    class={`${fixed ? "h-screen overflow-hidden" : "min-h-screen"} bg-base-200`}
  >
    <IslandNav />
    {fixed ? (
      <!-- Full viewport layout for fixed pages -->
      <main class="fixed inset-0 flex items-center justify-center">
        <slot />
      </main>
    ) : (
      <!-- Normal layout with navbar spacing -->
      <main class="pt-24">
        <slot />
      </main>
    )}
  </body>
</html>
