---
// src/layouts/Layout.astro
import "../styles/global.css";
import IslandNav from "../components/IslandNav.astro";

export interface Props {
  title: string;
  fixed?: boolean; // New prop to control scrollability
}

const { title, fixed = false } = Astro.props;
---

<!doctype html>
<html data-theme="nord" lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body
    class={`bg-base-300 ${fixed ? "h-screen overflow-hidden" : "min-h-screen"}`}
  >
    <IslandNav />
    <main
      class={fixed
        ? "h-full w-full"
        : "container mx-auto px-4 py-8 pt-20 max-w-4xl"}
    >
      <slot />
    </main>
  </body>
</html>
