---

<ContentLayout title="About Me">
  <div class="max-w-6xl mx-auto px-4 py-8">
    <!-- Hero Section -->
    <div class="hero bg-gradient-to-r from-primary to-secondary rounded-box mb-12 text-primary-content">
      <div class="hero-content text-center py-16">
        <div class="max-w-md">
          <div class="avatar mb-6">
            <div class="w-32 rounded-full ring ring-primary-content ring-offset-base-100 ring-offset-2">
              <img src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=400&h=400&fit=crop&crop=face" alt="Profile picture" />
            </div>
          </div>
          <h1 class="text-5xl font-bold mb-4">{personalInfo.name}</h1>
          <p class="text-xl mb-2">{personalInfo.title}</p>
          <p class="opacity-80 mb-6">{personalInfo.location}</p>
          <p class="text-lg leading-relaxed">{personalInfo.bio}</p>
        </div>
      </div>
    </div>



    <!-- Projects Section -->
    <section class="mb-12">
      <h2 class="text-3xl font-bold text-center mb-8">Personal Projects</h2>
      <div class="grid lg:grid-cols-2 xl:grid-cols-3 gap-6">
        {projects.map((project) => (
          <div class="card bg-base-100 shadow-lg hover:shadow-xl transition-shadow duration-300">
            <div class="card-body">
              <div class="flex justify-between items-start mb-3">
                <h3 class="card-title text-lg">{project.title}</h3>
                <div class={`badge ${project.status === 'Completed' ? 'badge-success' : 'badge-warning'} badge-sm`}>
                  {project.status}
                </div>
              </div>
              <p class="text-base-content/80 mb-4">{project.description}</p>
              <div class="flex flex-wrap gap-2 mb-4">
                {project.tech.map((tech) => (
                  <span class="badge badge-outline badge-primary badge-sm">{tech}</span>
                ))}
              </div>
              <div class="card-actions justify-end">
                <a href={project.link} class="btn btn-primary btn-sm" target="_blank" rel="noopener noreferrer">
                  View Project
                  <svg class="w-4 h-4 ml-1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Experience Section -->
    <section class="mb-12">
      <h2 class="text-3xl font-bold text-center mb-8">Work Experience</h2>
      <div class="timeline timeline-snap-icon max-md:timeline-compact timeline-vertical">
        {workExperience.map((job, index) => (
          <div class="timeline-item">
            <div class="timeline-middle">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="h-5 w-5 text-primary">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.236 4.53L8.25 10.75a.75.75 0 00-1.06 1.061l1.5 1.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class={`timeline-${index % 2 === 0 ? 'start' : 'end'} md:text-${index % 2 === 0 ? 'end' : 'start'} mb-10`}>
              <div class="card bg-base-100 shadow-md">
                <div class="card-body">
                  <time class="text-sm text-base-content/60 font-medium">{job.duration}</time>
                  <h3 class="card-title text-lg">{job.position}</h3>
                  <p class="text-primary font-semibold">{job.company}</p>
                  <p class="text-base-content/80">{job.description}</p>
                </div>
              </div>
            </div>
            <hr class="bg-primary" />
          </div>
        ))}
      </div>
    </section>

    <!-- Hobbies Section -->
    <section class="mb-12">
      <h2 class="text-3xl font-bold text-center mb-8">Hobbies & Interests</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {hobbies.map((hobby) => (
          <div class="card bg-base-100 shadow-md hover:shadow-lg transition-shadow duration-300">
            <div class="card-body text-center">
              <div class="text-4xl mb-3">{hobby.icon}</div>
              <h3 class="card-title justify-center text-lg mb-2">{hobby.name}</h3>
              <p class="text-sm text-base-content/80">{hobby.description}</p>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Contact Section -->
    <section class="text-center">
      <div class="bg-base-100 rounded-box shadow-lg p-8">
        <h2 class="text-3xl font-bold mb-6">Let's Connect</h2>
        <p class="text-lg text-base-content/80 mb-6">
          I'm always interested in new opportunities and collaborations. Feel free to reach out!
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href={`mailto:${personalInfo.email}`} class="btn btn-primary">
            <svg class="w-5 h-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            Email Me
          </a>
          <a href="https://linkedin.com/in/example" class="btn btn-outline btn-primary" target="_blank" rel="noopener noreferrer">
            <svg class="w-5 h-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
            LinkedIn
          </a>
          <a href="https://github.com/example" class="btn btn-outline btn-primary" target="_blank" rel="noopener noreferrer">
            <svg class="w-5 h-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
